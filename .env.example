# Efrit Environment Configuration
# Copy this file to .env and uncomment/modify as needed

# ==============================================================================
# API Configuration
# ==============================================================================

# Anthropic API Key (required for Claude access)
# Get your key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-api03-...

# API endpoint (default: https://api.anthropic.com/v1/messages)
# EFRIT_API_URL=https://api.anthropic.com/v1/messages

# API timeout in seconds (default: 30)
# EFRIT_API_TIMEOUT=30

# ==============================================================================
# Model Configuration
# ==============================================================================

# Claude model to use (default: claude-3-5-sonnet-20241022)
# Options: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# EFRIT_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for responses (default: 8192)
# EFRIT_MAX_TOKENS=8192

# Temperature for responses (0.0-1.0, default: 0.1)
# EFRIT_TEMPERATURE=0.1

# ==============================================================================
# Multi-turn Configuration
# ==============================================================================

# Enable multi-turn conversations (default: t)
# EFRIT_MULTI_TURN_ENABLED=t

# Maximum turns in a conversation (default: 10)
# EFRIT_MULTI_TURN_MAX_TURNS=10

# Timeout for multi-turn conversations in seconds (default: 300)
# EFRIT_MULTI_TURN_TIMEOUT=300

# ==============================================================================
# Tool Configuration
# ==============================================================================

# Enable tools/function calling (default: t)
# EFRIT_ENABLE_TOOLS=t

# Require confirmation for destructive operations (default: t)
# EFRIT_TOOLS_REQUIRE_CONFIRMATION=t

# ==============================================================================
# Development & Debug
# ==============================================================================

# Enable debug mode (default: nil)
# EFRIT_DEBUG=nil

# Enable verbose logging (default: nil)
# EFRIT_VERBOSE=nil

# Skip API tests (useful for CI without API key, default: nil)
# EFRIT_SKIP_API_TESTS=nil